{
  "buildCommand": "npm run build",
  "functions": {
    "app/api/scrape/trigger/route.ts": {
      "maxDuration": 300
    },
    "app/api/scrape/weekly/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/weekly/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/scraper/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/analyzer/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/health-check/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/scraper",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/analyzer",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/30 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}